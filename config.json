{
  "plugins": {
    "hello": {
      "type": "binary",
      "path": "./bin/hello",
      "port": 50051,
      "description": "A simple greeting plugin",
      "defaults": {
        "message": "World",
        "language": "en"
      },
      "env": {
        "LOG_LEVEL": "debug"
      }
    },
    "addition": {
      "type": "binary",
      "path": "./bin/addition",
      "port": 50052,
      "description": "A plugin that adds numbers together",
      "defaults": {
        "num1": "5",
        "num2": "10",
        "num3": "15"
      },
      "env": {
        "LOG_LEVEL": "info"
      }
    },
    "python-multiply": {
      "type": "command",
      "path": "./plugins/multiply/multiply.py",
      "command": "python3 {path} --port {port}",
      "port": 50053,
      "description": "A Python multiplication plugin",
      "workdir": "./plugins/multiply",
      "defaults": {
        "num1": "2",
        "num2": "3"
      },
      "env": {
        "PYTHONPATH": "./plugins/multiply",
        "LOG_LEVEL": "debug"
      }
    },
    "java-divide": {
      "type": "command",
      "path": "./plugins/divide/target/divide.jar",
      "command": "java -jar {path} -Dserver.port={port}",
      "port": 50054,
      "description": "A Java division plugin",
      "workdir": "./plugins/divide",
      "defaults": {
        "dividend": "10",
        "divisor": "2"
      },
      "env": {
        "JAVA_OPTS": "-Xmx512m",
        "LOG_LEVEL": "info"
      }
    },
    "remote-plugin-example": {
      "type": "remote",
      "address": "localhost:50055",
      "description": "An example of a remote plugin"
    }
  }
}
